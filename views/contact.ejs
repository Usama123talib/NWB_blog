<div class="card rounded-lg border bg-card text-card-foreground shadow-sm">
    <div class="flex flex-col space-y-1.5 p-6">
        <h3 class="text-2xl font-semibold whitespace-nowrap leading-none tracking-tight">Contact us</h3>
        <p class="text-sm text-muted-foreground">
            Fill out the form below and we'll get back to you as soon as possible.
        </p>
    </div>
    <div class="p-6 space-y-4">
        <div class="row g-4">
            <div class="col">
                <label for="first-name" class="form-label">First name</label>
                <input type="text" class="form-control" id="first-name" placeholder="Enter your first name">
            </div>
            <div class="col">
                <label for="last-name" class="form-label">Last name</label>
                <input type="text" class="form-control" id="last-name" placeholder="Enter your last name">
            </div>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" placeholder="Enter your email">
        </div>
        <div class="mb-3">
            <label for="message" class="form-label">Message</label>
            <textarea class="form-control min-h-100" id="message" placeholder="Enter your message"></textarea>
        </div>
    </div>
    <div class="flex items-center p-6">
        <button class="btn btn-primary">Send message</button>
    </div>
</div>
